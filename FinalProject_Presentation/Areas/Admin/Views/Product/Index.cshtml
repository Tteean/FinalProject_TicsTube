@using FinalProject_Service.Extentions
@model PaginatedList<Product>
@{
    int count = (Model.CurrentPage - 1) * 2;
}
<div class="container">
    <div class="row">
        <a asp-action="create" class="btn btn-outline-success">Create Product</a>
    </div>
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Count</th>
                    <th scope="col">Image</th>
                    <th scope="col">Name</th>
                    <th scope="col">CreatedDate</th>
                    <th scope="col">Settings</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <th>@(++count)</th>
                        <td>
                            <img width="100" height="100" src="~/uploads/Product/@product.Image" alt="" />
                        </td>
                        <td>@product.Name</td>
                        <td>@product.CreationDate.ToString("dd,MMMM yyyy")</td>
                        <td>
                            <a asp-action="edit" asp-route-id="@product.Id">Edit</a>
                            <a asp-action="detail" asp-route-id="@product.Id">Detail</a>
                            <a asp-action="delete" asp-route-id="@product.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="row justify-content-center">
        <nav aria-label="...">
            <ul class="pagination">
                <li class="page-item @(Model.HasPrev?"":"disabled")">
                    <a class="page-link" asp-action="index" asp-route-page="@Model.CurrentPage-1">Previous</a>
                </li>
                @for (int i = Model.Start; i <= Model.End; i++)
                {
                    <li class="page-item @(Model.CurrentPage == i?"disabled":"")"><a class="page-link" asp-action="index" asp-route-page="@i">@i</a></li>
                }

                <li class="page-item @(Model.HasNext?"":"disabled")">
                    <a class="page-link" asp-action="index" asp-route-page="@Model.CurrentPage+1">Next</a>
                </li>
            </ul>
        </nav>
    </div>
</div>
