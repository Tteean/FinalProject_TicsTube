@model List<Season>
@{
    int count = 0;
}
<div class="container">
    <div class="row">
        <a asp-action="create" class="btn btn-outline-success">Add new Movie</a>
    </div>
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Count</th>
                    <th scope="col">Name</th>
                    <th scope="col">Settings</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var movies in Model)
                {
                        <tr>
                            <th>@(++count)</th>
                            <td>@movies.SeasonNumber</td>
                            <td>
                                <a asp-action="edit" asp-route-id="@movies.Id">Edit</a>
                                <a asp-action="delete" asp-route-id="@movies.Id">Delete</a>
                            </td>
                        </tr>
                }
            </tbody>
        </table>

</div>
