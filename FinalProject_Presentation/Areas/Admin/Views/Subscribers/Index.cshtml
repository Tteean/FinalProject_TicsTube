@model List<Subscriber>
@{
    int count = 0;
}
<div class="container">
    <div class="row">
    </div>
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Count</th>
                    <th scope="col">Name</th>
                    <th scope="col">Settings</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <th>@(++count)</th>
                        <td>@user.Email</td>
                        <td>
                            <a asp-action="delete" asp-route-id="@user.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
