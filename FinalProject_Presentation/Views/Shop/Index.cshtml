@section Scripts {
    <script>
                $(document).ready(function () {
            $(document).on("click", "a.addBasket", function (e) {
                e.preventDefault();
                const url = $(this).attr("href");

                fetch(url)
                   .then(res => res.text())
                   .then(html => {

                       $(".fix-area").html(html);

                       const count = (html.match(/minicart-item/g) || []).length;
                       $(".BasketItemCount").text(count);
                   });
            });
        });
    </script>
}
