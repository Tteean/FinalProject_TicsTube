@model ProfileUpdateVm
<form method="post">
    <div class="row">
        <div class="col-lg-6">
            <div class="single-input-item">
                <label asp-for="UserName" class="required">User Name</label>
                <input asp-for="UserName" placeholder="First Name" />
                <span class="text-danger" asp-validation-for="UserName"></span>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="single-input-item">
                <label asp-for="FullName" class="required">Full Name</label>
                <input asp-for="FullName" placeholder="Last Name" />
                <span class="text-danger" asp-validation-for="FullName"></span>

            </div>
        </div>
    </div>

    <div class="single-input-item">
        <label asp-for="Email" class="required">Email Addres</label>
        <input asp-for="Email" placeholder="Email Address" />
        <span class="text-danger" asp-validation-for="Email"></span>

    </div>
    <fieldset>
        <legend>Password change</legend>
        <div class="single-input-item">
            <label asp-for="CurrentPassword" class="required">Current Password</label>
            <input asp-for="CurrentPassword" placeholder="CurrentPassword ">
            <span class="text-danger" asp-validation-for="CurrentPassword"></span>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <div class="single-input-item">
                    <label asp-for="NewPassword" class="required">Current Password</label>
                    <input asp-for="NewPassword" placeholder="NewPassword ">
                    <span class="text-danger" asp-validation-for="NewPassword"></span>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="single-input-item">
                    <label asp-for="ConfirmPassword" class="required">Confirm Password</label>
                    <input asp-for="ConfirmPassword" placeholder="ConfirmPassword ">
                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                </div>
            </div>
        </div>
    </fieldset>
    <div class="single-input-item">
        <button type="submit" class="check-btn sqr-btn ">Save Changes</button>
    </div>
    <div asp-validation-summary="ModelOnly" class="col-12 text-danger"></div>
</form>